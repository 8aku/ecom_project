<h1>Customer Information</h1>

<% if @customer.personal_photo.attached? %>
<%= image_tag(@customer.personal_photo.variant(resize_to_limit: [200, 200])) %>
<% end %>

<div>
Name: <%= @customer.first_name %> <%= @customer.last_name %> 
</div>
<div>
Address: <%= @customer.address %>
</div>
<div>
Province: <%= @customer.province.code %>
</div>
<div>
GST: <%= @customer.province.gst %>
</div>
<div>
HST: <%= @customer.province.hst %>
</div>
<div>
PST: <%= @customer.province.pst %>
</div>

<% @orders.each do |order| %>
<h3>Order Number: <%= order.id %></h3>
<% order.order_details.each do |details| %>
				<h5>Quantity On Order: <%= details.quantity %></h5>
				<h5>Product Name: <%= details.product.name %></h5>
<% end %>
<% end %>