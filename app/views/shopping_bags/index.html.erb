 <% if current_bag.total_price != 0 %>
 <% current_bag.shopping_items.each do |item| %>
  <div id="container">
 <h2>Product Name: <%= item.product.name %></h2>
 <h3>Quantity: <%= item.quantity %></h3>
 <div id ="edit">

 	<%= form_for item, :method => :PUT do |f| %>
 	<%= f.number_field :quantity, value: item.quantity, min: 1 %>
 	<%= f.submit "Update" %>
 	<% end %>

 	<%= form_for item, :method => :DELETE do |f| %>
 	<%= f.submit "Delete" %>
 	<% end %>
 </div>
 <% end %>
</div>
<h4>Cart Total Before Tax: <%= number_to_currency(current_bag.total_price) %></h4>

<% else %>
<h1>Your Shopping Bag is Empty.</h1>
<% end %>
